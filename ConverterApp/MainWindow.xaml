<Window x:Class="ConverterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConverterApp"
        mc:Ignorable="d"
        Title="Конвертер" Height="250" Width="500">
    <Window.Background>
        <ImageBrush ImageSource="/Frame 15.png"/>
    </Window.Background>


    <StackPanel Margin="20,20,20,10">
        <TextBox x:Name="InputPathBox" IsReadOnly="True" Margin="0 0 0 10" BorderBrush="#00ABADB3" Foreground="White">
            <TextBox.Background>
                <ImageBrush/>
            </TextBox.Background>
        </TextBox>
        <Button Content="" Click="Browse_Click" Margin="0,25,0,10">
            <Button.OpacityMask>
                <ImageBrush ImageSource="/Frame 19.png"/>
            </Button.OpacityMask>
        </Button>
        <ComboBox x:Name="QualityComboBox"
          Width="150"
          Margin="10"
          Visibility="Collapsed"
          SelectedIndex="1">
        </ComboBox>
        <ComboBox x:Name="FormatBox" SelectionChanged="FormatBox_SelectionChanged" Margin="0,25,0,0" Panel.ZIndex="7" MaxDropDownHeight="294" HorizontalContentAlignment="Center" BorderBrush="#00ACACAC" Background="#00FF0000">
            <ComboBox.OpacityMask>
                <ImageBrush ImageSource="/Frame 18.png"/>
            </ComboBox.OpacityMask>
        </ComboBox>
        <Button Content="" Click="Convert_Click" Margin="0,25,0,30" Height="22">
            <Button.BorderBrush>
                <ImageBrush/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush ImageSource="/Frame 17.png"/>
            </Button.Background>
        </Button>
    </StackPanel>
</Window>
